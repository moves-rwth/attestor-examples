{
    "scenario":"Prove that the neighbourhood of every node is the orignal one upon termination.",
    "input":{
        "program":{
            "classpath":"configuration/code",
            "class":"Lindstrom",
            "method":"traverse"
        },
        "userDefinedGrammar":{
        },
        "predefinedGrammars":[
            { "type": "BT", "definition":"configuration/grammar/RenameBTLindstrom.java" }
        ],
        "initialState":{
            "path":"configuration/inputs",
            "file":"bt.json",
            "description":"An arbitrary binary tree"
        }
    },
    "options":{
        "abstractionDistance":0,
        "logging":true,
        "maximalStateSpace":100000,
        "removeDeadVariables" : true
    },
    "output":{
        "enabled":false
    },
    "modelChecking":{
       "enabled":true,
	   "formulae":"( G F { terminated } -> F ( { terminated } & { identicNeighbours } ) )"
    }        
}
