{
    "name": "AVL: Search and swap",
    "specificationDescription": "M-S",
    "scenario": "Tree is balanced upon termination",
    "input": {
        "program": {
            "classpath": "configuration/code",
            "class": "AVLTree",
            "method": "searchAndSwap"
        },
        "userDefinedGrammar": {
            "path": "configuration/grammar",
            "files": [
                "avltree.json"
            ]
        },
        "initialState": {
            "path": "configuration/inputs",
            "file": "balanced_tree.json",
            "description": "A general balanced AVL tree"
        },
        "predefinedGrammars": []
    },
    "options": {
        "maximalStateSpace": 5000,
        "abstractionDistance": 1,
        "mode": "indexed",
        "garbageCollection": false
    },
    "output": {
        "enabled": true
    },
    "modelChecking": {
        "enabled": true,
        "formulae": "(GF { terminated } -> F ({ terminated } & { btree }))"
    }
}