{
    "name": "Reverse SLL",
    "scenario": "Provide a counterexample showing that the reversed list is not the same list as the initial one.",
    "specificationDescription": "M-N-X",
    "input": {
        "program": {
            "classpath": "configuration/code",
            "class": "SLLReverse",
            "method": "reverseList"
        },
        "userDefinedGrammar": {},
        "predefinedGrammars": [
            {
                "type": "SLList",
                "definition": "configuration/grammar/RenameSLL.java"
            }
        ],
        "initialState": {
            "path": "configuration/inputs",
            "file": "SLL.json"
        }
    },
    "options": {
        "abstractionDistance": 1,
        "garbageCollection": false,
        "verifyCounterexamples":true
    },
    "output": {
        "enabled": true
    },
    "modelChecking": {
        "enabled": true,
        "formulae": "G({ terminated } -> {identicNeighbours})"
    }
}