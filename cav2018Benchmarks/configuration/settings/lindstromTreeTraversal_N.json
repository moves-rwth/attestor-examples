{
    "name":"Lindstrom Algorithm",
    "scenario":"Verify that the tree upon termination coincides with the input tree.",
    "specificationDescription":"M-N",
    "input":{
        "program":{
            "classpath":"configuration/code",
            "class":"Lindstrom",
            "method":"traverse"
        },
        "userDefinedGrammar":{
        },
        "predefinedGrammars":[
            { "type": "BT", "definition":"configuration/grammar/RenameBTLindstrom.java" }
        ],
        "initialState":{
            "path":"configuration/inputs",
            "file":"BinaryTree.json",
            "description":"An arbitrary binary tree"
        }
    },
    "options":{
        "abstractionDistance":0,
	    "collapseRules":False,
        "maximalStateSpace":500000
    },
    "output":{
        "enabled":false,
        "stateSpace":{
            "path":"../attestor-examples-output/RefBT/lindstromTraverse_neighbourhood"
        }
    },
    "modelChecking":{
       "enabled":true,
	   "formulae":"( G F { terminated } -> F ( { terminated } & { identicNeighbours } ) )"
    }        
}
