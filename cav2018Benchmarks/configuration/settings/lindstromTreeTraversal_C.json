{
    "name":"Lindstrom algorithm",
    "scenario":"Verify that the algorithm terminates at the root of the tree.",
    "specificationDescription":"M-C",
    "input":{
        "program":{
            "classpath":"configuration/code",
            "class":"Lindstrom",
            "method":"traverse"
        },
        "userDefinedGrammar":{
        },
        "predefinedGrammars":[
            { "type": "BT", "definition":"configuration/grammar/RenameBTLindstrom.java" }
        ],
        "initialState":{
            "path":"configuration/inputs",
            "file":"BinaryTree.json",
            "description":"An arbitrary binary tree"
        }
    },
    "options":{
        "abstractionDistance":0,
        "maximalStateSpace":100000
    },
    "output":{
        "enabled":false,
    },
    "modelChecking":{
       "enabled":true,
	   "formulae":"( G F { terminated } -> (GX {terminated} -> { cur == sen } ) )"
    }        
}
