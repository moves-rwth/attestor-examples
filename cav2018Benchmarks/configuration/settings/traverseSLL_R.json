{
    "name":"SLL traversal",
    "scenario":"Verify that the list tail is reachable from the head upon termination.",
    "specificationDescription":"M-R",
    "input":{
        "program":{
            "classpath":"configuration/code",
            "class":"SLLTraverse",
            "method":"traverse"
        },
        "userDefinedGrammar":{
        },
        "predefinedGrammars":[
            { "type": "SLList", "definition":"configuration/grammar/RenameSLL.java" }
        ],
        "initialState":{
            "path":"configuration/inputs",
            "file":"SLLWithTail.json"
        }
    },
    "options":{
        "abstractionDistance":1
    },
    "output":{
        "stateSpace":{
            "enabled":true,
            "path":"../attestor-examples-output/RefSLL/traverseSLL_R"
        }
    },
    "modelChecking":{
       "enabled":true,
	   "formulae":"F (X {terminated} -> {isReachable(head,tail,[next])})"
    }
}
